@model TODO_APP.Models.Todo

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Task</h2>

            <hr />
        </div>

                    <div class=mb-3>
                        <label asp-for="taskName"></label>
                        <input asp-for="taskName" class="form-control" />
                    </div>
                    <br />
                    <div class=mb-3>
                        <label asp-for="creationDate"></label>
                        <input asp-for="creationDate" class="form-control" />
                    </div>
                    <br />
                    <div class=mb-3>
                        <label asp-for="completionDate"></label>
                        <input asp-for="completionDate" class="form-control" />
                    </div>


                
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Cancel</a>
                        </div>


                    </div>
                </div>
            </div>
     
</form>
