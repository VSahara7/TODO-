@model IEnumerable<Todo>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Task List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Todo" asp-action="create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; create new task
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Task
                </th>
                <th>
                    Start Date
                </th>
                <th>
                    End Date
                </th>


            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td with="25%">
                        @obj.taskName
                    </td>
                    <td with="25%">
                        @obj.creationDate
                    </td>
                    <td with="25%">
                        @obj.completionDate
                    </td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Todo" asp-action="Edit" asp-route-id="@obj.taskId"
                               class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>&nbsp; Edit</a>

                            <a asp-controller="Todo" asp-action="Delete" asp-route-id="@obj.taskId"
                               class="btn btn-danger mx-2"><i class="bi bi-trash"></i>&nbsp; Delete</a>
                        </div>
                    </td>
                </tr>

            }

        </tbody>
    </table>
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">




        


            @if (User.Identity.IsAuthenticated)
            {
                <div class="btn">
                    <a class="btn btn-primary" asp-area="" asp-controller="Todo" asp-action="LogOut">LogOut</a>
                </div>
            }
            else
          
            {
    <ul>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Todo" asp-action="login">LogIn</a>
        </li>
    </ul>
            }
      


    </div>
</div>
