@model TODO_APP.Models.Todo
<form method="post" asp-action="EditPOST">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Book</h2>
            <hr />
        </div>
        <input asp-for="taskId" type="hidden" class="form-control" />
        <div class=mb-3>
            <label asp-for=taskName></label>
            <input asp-for="taskName" class="form-control" />
            <span asp-validation-for="taskName" class="text-danger"></span>
        </div>
        <div class=mb-3>
            <label asp-for=creationDate></label>
            <input asp-for="creationDate" class="form-control" />
            <span asp-validation-for="creationDate" class="text-danger"></span>
        </div>
        <div class=mb-3>
            <label asp-for=completionDate></label>
            <input asp-for="completionDate" class="form-control" />
            <span asp-validation-for="completionDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
        <a asp-controller="Todo" asp-action="Index" class="btn alert-secondary" style="width:150px"> Cancel </a>
    </div>
</form>
